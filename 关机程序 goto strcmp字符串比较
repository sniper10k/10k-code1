#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>
#include<time.h>
#include<string.h>

int main()
{
	char input[20] = z{ 0 };
	system("shutdown -s -t 60");
again:
	printf("将在一分钟内关机!请输入取消!\n输入:");
	scanf("%s", input);
	if (strcmp(input, "取消")== 0)
	{
		system("shutdown -a");
		printf("已经取消!\n");
	}
	else
	{
		goto again;
	}

	return 0;
}
